generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id              BigInt     @id @default(autoincrement())
  email           String     @unique(map: "users_email_unique") @db.VarChar(255)
  profileImageUrl String     @db.VarChar(255)
  cryptedPassword String     @db.VarChar(255)
  createdAt       DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime   @default(now()) @db.Timestamptz(6)
  username        String     @unique @db.VarChar(255)
  checkins        checkins[]
}

model checkins {
  id     Int       @id @default(autoincrement())
  notes  String
  date   DateTime? @default(now()) @db.Timestamp(6)
  userid BigInt?
  moods  String?
  users  users?    @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_user")

  @@index([userid], map: "checkins_userid")
}
